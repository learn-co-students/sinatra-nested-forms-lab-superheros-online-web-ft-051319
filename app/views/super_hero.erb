<h1>Create a Team and Heroes!</h1>

<form action='/teams' method="POST">

  <p>
    <label>Team Name:</label>
    <input type="text" name="team[name]" >
    <br>
    <label>Team Motto:</label>
    <input type="text" name="team[motto]" >
  </p>

  <p>
    <%1.upto(3) do |i|%>
      <h2>Hero <%=i%></h2>
      <label>Hero's Name</label>
      <input type="text" id="member<%=i%>_name" name="team[members][][name]" >
      <br>
      <label>Hero's Power</label>
      <input type="text" id="member<%=i%>_power" name="team[members][][power]" >
      <br>
      <label>Hero's Biography</label>
      <input type="text" id="member<%=i%>_bio" name="team[members][][bio]" >
    <%end%>
  </p>
  
  <input type="submit" name="submit" value="submit">
</form>